<h2>Make an appointment</h2>
<p>Here you can make an appointment</p>

<form action="/visit" method="POST" role="form">

  <div class="form-group">
    <label>Your name</label>
    <input id="bbb" name="username" type="text" class="form-control" placeholder="Your name">
  </div>

  <div class="form-group">
    <label>Your phone</label>
    <input id="aaa" name="phone" type="text" class="form-control" placeholder="Your phone">
  </div>

  <div class="form-group">
    <label>Date and time?</label>
    <input name="datetime" type="text" class="form-control ccc" placeholder="Date and time">
  </div>

  <div class="form-group">
    <label>Your barber:</label>    
    <select class="form-control ccc" name="barber">
      <option>Walter White</option>
      <option>Jessie Pinkman</option>
      <option>Gus Fring</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>

<script type="text/javascript">
$('#aaa').css('background-color','yellow');
$('#bbb').css('background-color','brown');
$('.ccc').css('background-color','pink');
</script>